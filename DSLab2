#include <stdio.h>

int main() {
    createAnArray(int num, int arr[]);
    deleteElement(int arr[], int n);
    smallestNumber(int arr[], int size);
    largestnumber(int arr[], int size);
    int arr[10];
    
    int function;
    printf(" ** Choose a functionality ** \n");
    printf(" 1. Create a new array\n");
    printf(" 2. Delete an element from array\n");
    printf(" 3. Find smallest element in the array\n");
    printf(" 4. Find largest element in the array\n");
    scanf("%d", &function);

    switch(function) {
        case 1 : createAnArray(int num, int arr[]);
         break; 
        case 2 : deleteElement(int arr[], int n);
         break;
        case 3 : smallestNumber(int arr[], int size);
         break; 
        case 4 : largestnumber(int arr[], int size);
         break;
    }
    return 0;
    
}
int createAnArray(int num, int arr[]) {
    int size = num;

    for(int i = 0; i < size; i++) {
        printf("Enter the %d Element", &arr[i]);
        scanf( "%d",arr[i]);
    }
    for(int i = 0; i < size; i++) {
        printf("%d", arr[i]);
    }
    return 0;
}
int deleteElement( int arr[], int n) {
    int i;
    int x = n;
    for(i = 0 ; i < n; i++) {
        if(arr[i] == x );
        break;
        if( i < n) {
            n = n - 1;
            for(int j = i; j < n; j++) {
                arr[j] = arr[j + 1];
            }
        }
    }
    printf("\n After Removal of %d from array\n", &x);
    for( int i = 0; i < n; i++) {
        printf("%d", arr[i]);
    }
    return 0;
}
int smallestNumber (int arr[], int size) {
    int small = arr[0];
    for(int i = 0; i < size; i++) {
        if(arr[i] < small) {
            small = arr[i];
        }
    }
    printf("Smallest Element of array : %d", &small); 
    return 0; 
}

int largestNumber(int arr[], int size) {
    int large = arr[0];
    for(int i = 0; i < size; i++) {
        if(arr[i] > large) {
            large = arr[i];
        }
    }
    printf("Largest Elemnet of array : %d", &large);
    return 0; 
}
